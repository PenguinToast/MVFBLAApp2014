<!-- Layout for the ForumActivity -->
<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".ForumActivity" >
		
        <!-- Uses Expandable ListView so that the comments to questions can appear -->
        <ExpandableListView
            android:id="@+id/ExpList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:groupIndicator="@null" 
            android:layout_weight = ".9"/>
        
        <!-- Creates the textbox at the bottom of the screen so
         	 the user can post replies or new questions --> 
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "horizontal">
            
        	<EditText 
	            android:id = "@+id/NewPost"
	            android:hint = "@string/EnterPost"
	            android:layout_width = "0dp"
	            android:layout_height = "wrap_content"
	            android:layout_weight = ".8"/>
        	<Button
        	    android:id = "@+id/SubmitNewPost"
        	    android:layout_width = "wrap_content"
        	    android:layout_height = "wrap_content"
        	    android:text = "@string/Submit"
        	    android:onClick="SubmitPost"/>
        	
        </LinearLayout>
    </LinearLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>